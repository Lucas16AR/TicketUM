@startuml Class Diagram

class Event {
    - name: String
    - date: Date
    - location: String
    - description: String
    - attendees: List<Guests>
    + add_guest(guest: Guest)
}

class Guest {
    - name: String
    - email: String
    - phone: String
    - dni: String
}

class Admin {
    - username: String
    - password: String
    + login(username: String, password: String): boolean
    + logout()
    + create_event(event: Event)
    + edit_event(event: Event)
    + delete_event(event: Event)
}

Event "1" *-l- "1..*" Guest
Admin "1" *-- "1..*" Event